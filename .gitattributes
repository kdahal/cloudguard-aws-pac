# =========================================
# CloudGuard: Git LFS for large binaries
# =========================================

# Terraform provider binaries
terraform/.terraform/providers/** filter=lfs diff=lfs merge=lfs -text

# Lambda zip packages
lambda/**/*.zip filter=lfs diff=lfs merge=lfs -text

# OPA WASM modules
opa/**/*.wasm filter=lfs diff=lfs merge=lfs -text

# Any large test or artifact files
tests/integration/**/*.zip filter=lfs diff=lfs merge=lfs -text
tests/integration/**/*.tar filter=lfs diff=lfs merge=lfs -text

# Optional: any large generated logs or data
opa/output/** filter=lfs diff=lfs merge=lfs -text
